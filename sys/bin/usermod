while true do
print("User Modification Wizard")
print("Options:")
print("1. Add user")
print("2. Remove user")
print("3. List users")
print("0. Exit")
term.write("Select an option: ")
a = io.read()
if a == "1" then
  print(" ")
  term.write("New username: ")
  username = io.read()
  term.write("Password: ")
  password = read("*")
  s = DerpyOS_User_AddUser(username, password)
  if s == "DerpyOS_User_AddedOK" then
    print("User added.")
  else
    print("Error adding user.")
  end
  print(" ")
elseif a == "2" then
  print(" ")
  term.write("Username to delete: ")
  username = io.read()
  s = DerpyOS_User_RemoveUser(username)
  if s == "DerpyOS_User_UserRemoved" then
    print("User deleted.")
  else
    print("Error deleting user.")
  end
  print(" ")
elseif a == "3" then
  print(" ")
  print("User list:")
  for id, name in pairs(DerpyOS_User_ListUsers()) do
    print(name)
  end
  print(" ")
elseif a == "0" then
  break
else
  print(" ")
  print("Invalid option.")
  print(" ")
end
end
